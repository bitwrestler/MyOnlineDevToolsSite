<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@picocss/pico@@2/css/pico.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <img src="~/clocksAndStuff.jpg" alt="Banner Image" width="1024" height="100" class="site-banner"/>
        <!-- Left-side overlay title on the banner -->
        <div class="banner-overlay">
            <h1 class="banner-title">Developer Tools</h1>
        </div>
    </header>
       
        <main class="container-fluid">
        
        <nav>
            <ul>
                <li><a href="/" role="button" class="outline">DateTime</a></li>
            </ul>
        </nav>

            @RenderBody()
        </main>

    <footer class="border-top footer text-muted">
            <div>&copy; 2025 @ViewData["Title"]</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>